module libc =

import prim

type C_Char    = Int8
type C_Short   = Int16
type C_Int     = Int32
type C_Long    = Int64
type C_Float   = Float32
type C_Double  = Float64
type C_Str     = BufPtrSentinel C_Char 0
type C_Array t = BufPtr t

type Size_T  = Uint64
type Ssize_T = Int64

const STDIN_FILENO  = 0 :: C_Int
const STDOUT_FILENO = 1 :: C_Int
const STDERR_FILENO = 2 :: C_Int

foreign fn puts :: C_Str -> C_Int
foreign fn write :: C_Int, BufPtr C_Char, Size_T -> Ssize_T
