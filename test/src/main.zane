mod libc
mod util
mod core

--| @no_mangle
fn main(argc: i32, argv: **u8) -> i32
    var ptr = libc/malloc(72).(*core/TypeInfoInt);
    var base = ptr.(*core/TypeInfo);

    base.*.kind = 5;
    base.*.size = 2;
    base.*.align = 2;
    base.*.stride = 2;
    ptr.*.bits = 16;
    ptr.*.sign = true;

    libc/free(ptr.(_));

    0
end

