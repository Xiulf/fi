module Prim =

@lang = "type-kind"  foreign type Type
@lang = "int-type"   foreign type Int i
@lang = "float-type" foreign type Float f

@int = "i32" foreign type Int32

foreign type Array len item
infixr type 1 (*) = Array

@lang = "unit-type"
type Unit = | Unit

@lang = "pair-type"
type Pair a b = | Pair a b

trait Termination t =
    report :: t -> ExitCode

type ExitCode = | ExitCode Int32

impl Termination Unit =
    report () = ExitCode 0