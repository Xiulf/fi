module Main

import Fmt
import Fmt.Arg as FmtArg

@main
fn main(argc: i32, argv: [*][*:0]u8) -> i32
    var c = Counter(0);

    c.inc();
    c.inc();

    print_fmt("Hello %!\n", [
        FmtArg.usize(&c.num)
    ][..]);

    0
end

struct Counter
    num: usize

    fn inc()
        self.num += 1;
    end
end
