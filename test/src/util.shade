fn print(string: str)
    write(string);
end

fn println(string: str)
    print(string);
    ~/libc/write(0, &10, 1);
end

fn write(string: str)
    ~/libc/write(0, string.ptr, string.len);
end

fn print_bool(val: bool)
    if val
        write("true");
    else
        write("false");
    end
end

fn print_usize(val: usize, base: usize)
    var buf: [u8; 64];
    var i = 32;

    if val == 0
        i -= 1;
        buf[i] = 48;
    else
        while val > 0
            i -= 1;
            buf[i] = "0123456789ABCDEF"[val % base];
            val /= base;
        end
    end

    ~/libc/write(0, &buf[i], 32 - i);
end
