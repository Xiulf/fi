--| @lang "range"
struct Range
    low: usize
    high: usize
end

--| @lang "type_info"
struct TypeInfo
    kind: u8
    size: usize
    align: usize
    stride: usize
end

struct TypeInfoInt
    base: TypeInfo
    bits: u8
    sign: bool
end

struct TypeInfoFloat
    base: TypeInfo
    bits: u8
end

struct TypeInfoPtr
    base: TypeInfo
    to: *TypeInfo
end

struct TypeInfoSlice
    base: TypeInfo
    of: *TypeInfo
end

struct TypeInfoArray
    base: TypeInfo
    of: *TypeInfo
    len: usize
end
